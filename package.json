{
  "name": "social-media",
  "version": "1.0.0",
  "engines": {
    "node": "8.12.0",
    "npm": "6.4.1"
  },
  "description": "Social Network for Developer",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "npm run build --prefix client && node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server \" \"npm run client\"",
    "heroku-postbuild":
      "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Ella Tolentino",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.23.0",
    "mongoose": "^5.3.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "react-moment": "^0.8.4",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.7"
  }
}
